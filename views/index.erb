<div class="hero-unit">
  <div class="hero-unit-outer">
    <div class="hero-unit-inner">
      <h1><%= settings.question %></h1>
      <form id="entry-form" method="post" action="/entry">
        <input type="text" id="entry-input" name="entry" placeholder="Submit your idea..." maxlength="301" />
      </form>
      <p id="warning">Ideas should have between 1 and 300 characters.</p>
    </div>
  </div>
  <div class="hero-unit-footer">
    <h3><a id="go-to-entries" href="#entries">or vote in ideas submitted by others</a></h3>
    <span class="entries-arrow">&darr;</span>
  </div>
</div>

<div id="entries">
  <div class="container">
    <div class="row">
      <div class="span12">
        <% if @entries.any? %>
          <table class="table">
            <tbody>
              <%= partial(:entry, collection: @entries) %>
            </tbody>
          </table>

          <% if @buried_entries.any? %>
            <div id="separator">
              <a href="#buried-entries" class="info-text">
                Show buried entries (<%= @buried_entries.size %>)
              </a>
            </div>

            <table class="table" id="buried-entries">
              <tbody>
                <%= partial(:entry, collection: @buried_entries) %>
              </tbody>
            </table>
          <% end %>
        <% else %>
          <p>No ideas yet. Why not add one yourself?</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
