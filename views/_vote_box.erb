<span id="vote_score_<%= entry.id %>" title="Based on <%= entry.vote_count %> vote<%= 's' if entry.vote_count != 1 %>." ><%= entry.vote_score %></span><br/>
<div class="btn-group" data-entry-id="<%= entry.id %>">
  <button id="bt-up" value="true" class="btn btn-mini up">▲</button>
  <button id="bt-dw" value="false" class="btn btn-mini down">▼</button>
</div>
